.pm-box
    margin-top 10px
    padding-bottom 20px
    // border-bottom 1px solid #e9e9e9
    width 100%
    *
        box-sizing border-box
    .pmtransfer-row
        position relative
        line-height 1.5
        padding 0
        margin 0 5px
        .pmtransfer
            position relative
            border 1px solid #d9d9d9
            display inline-block
            border-radius 6px
            vertical-align middle
            height 240px
            padding-top 36px
            .pmtransfer-header
                padding 7px 16px
                padding-right 0px
                border-radius 6px 6px 0 0
                background-color #fff
                color #666
                border-bottom 1px solid #e9e9e9
                overflow hidden
                position absolute
                top 0
                left 0
                width 100%
            .pmtransfer-checkbox
                white-space nowrap
                cursor pointer
                outline none
                display inline-block
                line-height 1
                position relative
                vertical-align middle
            .pmtransfer-checkbox-inner
                position relative
                top 0
                left 0
                display inline-block
                width 14px
                height 14px
                border-radius 3px
                border 1px solid #d9d9d9
                background-color #fff
                -webkit-transition border-color .1s cubic-bezier(.71,-.46,.29,1.46),background-color .1s cubic-bezier(.71,-.46,.29,1.46)
                transition border-color .1s cubic-bezier(.71,-.46,.29,1.46),background-color .1s cubic-bezier(.71,-.46,.29,1.46)
                &:after
                    content ' '
                    -webkit-transform scale(1)
                    -ms-transform scale(1)
                    transform scale(1)
                    position absolute
                    left 2px
                    top 5px
                    width 8px
                    height 1px
            .pmtransfer-checkbox-indeter
                .pmtransfer-checkbox-inner
                    border-color #2db7f5
                    background-color #2db7f5
            .pmtransfer-header-selected
                margin-left 8px
            .pmtransfer-checkbox-input
                position absolute
                left 0
                z-index 1
                cursor pointer
                opacity 0
                top 0
                bottom 0
                width 100%
                height 100%
            input
                line-height normal
            .pmtransfer-body
                margin-top 4px
                position relative
                height calc(100% - 5px)
                overflow auto
                .pmtransfer-content
                    position relative
                    height 100%
                    overflow auto
                    .pmtransfer-item
                        overflow hidden
                        white-space nowrap
                        text-overflow ellipsis
                        padding 7px 16px
                        -webkit-transition all .3s ease
                        transition all .3s ease
                        &:hover
                            background-color #eff7fd
                        &.item-selected
                            background-color #77b0e5
                        .pm-check-wrapper
                            cursor pointer
                            font-size 12px
                            display inline-block
                            .pm-checkbox
                                white-space nowrap
                                cursor pointer
                                outline none
                                display inline-block
                                line-height 1
                                position relative
                                vertical-align middle
                            .pm-checkbox-checked
                                .pmtransfer-inner
                                    border-color #2db7f5
                                    background-color #2db7f5
                .item-selected
                    background-color #77b0e5
        .pmtransfer-btn
            padding-top 30px
            text-align center
            height 100%
            float left
            width 5%
            .btn
                display block
                margin 50px auto
        .main
            margin 0
            width 45%
            float left
