/**********footer****************/
.main-footer
    border-top none
.bootbox
    .modal-dialog
        margin 100px auto !important
    .modal-dialog
        @media (min-width 992px) and (max-width 1119px)
            margin 100px auto !important
    .modal-dialog
        @media (min-width $screen-lg-min)
            margin 100px auto !important
.form-group.has-error .help-block
    display none
    height 0
.form-control-feedback
    display none
    height 0
.waitBox
    position: absolute
    z-index: 3999
    left: 50%
    top: 50%
    overflow: hidden
    margin: -88.5px 0 0 -88.5px
    width: 177px
    height: 177px
    background: url(/assets/images/login/loading.gif) top no-repeat
    line-height: 400px
    text-align: center
#pageOverlay_wait_submit
    position: fixed
    top: 0
    left: 0
    z-index: 2999
    width: 100%
    height: 100%
    background: #000
    opacity: 0.2


.form-group .ng-touched.ng-invalid-required
    border 1px solid #dd4b39
    box-shadow none

/***移除type="number"的上下小箭头***/
input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button
    -webkit-appearance none !important
    margin  0
input[type="number"]
