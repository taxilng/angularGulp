.paging-panel
    padding 0 20px
    .page-pagination
        padding-left 0
        margin 0
        border-radius 0px
        text-align right
        .pagination
            li
                span
                    color #666
                    font-size 18px
                    cursor default
                    display block
                    height 27px
                    line-height 27px
                    padding 0px 7px
                    margin 0 6px 0 0
                    border-radius 2px !important
                    float left
                    font-size 14px
                    border 1px solid #dfdfe0
                    outline 0
                    text-decoration none
                    cursor pointer
                    &:focus
                        background-color red !important
                    &:hover
                        color #fff
                        background-color $color-blue-primary !important
                        opacity .8
                        transition all .3s ease
                        -webkit-transition all .3s ease
            .active a,
            .active span
                &,&:hover,&:focus
                    z-index 2
                    color #fff
                    background-color $color-blue-primary
                    border-color #e0e0e0
                    cursor pointer
            .prevNext
                width 102px
                height 50px
    .totalCount
        display inline-block
        clear both
        float right
        font-size 14px
        .totalCountSpan
            margin 5px
