body
    -webkit-font-smoothing antialiased
.menu-nav
    margin 0 0 15px 0
    background white
    height 35px
.menu-list
    position relative
    display inline-block
    padding 0 21px
    height 35px
    line-height 35px
    z-index 99
    &:hover
        background #efefef
        cursor pointer
    .circle-static
        position absolute
        left 0%
        top 0%
        width 100%
        height 100%
        background rgba(155, 155, 155, 0.35)
        transition all .4s cubic-bezier(.25,.8,.25,1)
        transition-duration 200ms
        opacity 0
    .rubberBand
        opacity 1 !important
    .zoomIn
        opacity 1 !important
.display-menu-content
    position absolute
    left 0
    top 100%
    z-index 0
    background rgba(251, 251, 251, .95)
    padding 16px 0
    max-height none
    min-width 320px
    display flex
    box-shadow 0 2px 4px -1px rgba(0,0,0,.2),0 4px 5px 0 rgba(0,0,0,.14),0 1px 10px 0 rgba(0,0,0,.12)
    transform-origin left top 0px
    flex-direction column
    transition all 95ms
    .display-menu-list
        position relative
        line-height 35px
        font-size 15px
        padding 0 21px
        cursor pointer
        user-select none
        &:hover
            background-color rgba(158,158,158,0.2)
        .fa-caret-right
            font-size 20px
            line-height 35px
            margin-right 15px
.displaying
    animation displaying .15s linear
.displayings
    animation displaying .15s linear
.menu-bubble-animation
    animation menu-bubble .25s cubic-bezier(.5, .8, .5, 1)
.right-menu-content
    position absolute
    left 100%
    top 0
    z-index 0
    background rgba(251, 251, 251, .95)
    padding 16px 0
    min-width 320px
    max-height none
    box-shadow 0 2px 4px -1px rgba(0,0,0,.2),0 4px 5px 0 rgba(0,0,0,.14),0 1px 10px 0 rgba(0,0,0,.12)
    .right-menu-list
        position relative
        line-height 35px
        font-size 15px
        padding 0 21px
        cursor pointer
        user-select none
        &:hover
            background-color rgba(158,158,158,0.2)

.paper-ripple
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    overflow hidden
    .paper-ripple-circle
        position absolute
        width 35px
        height 35px
        border-radius 50%
        opacity 0
        background-image radial-gradient(circle, rgba(51, 51, 51, .35) 5%, rgba(51, 51, 55, .5) 100%)
        border-width 3px
        border-style solid
        border-color rgba(99, 99, 99, 0.35)


@keyframes displaying{
    0%{
        transform: scale(0); opacity: 0;
    }
    75%{
        transform: scale(0.8); opacity: .1;
    }
    100%{
        transform: scale(1); opacity: 1;
    }
}

@keyframes menu-bubble{
    0%{
        opacity: 0; transform: scale(.05);
    }
    35%{
        opacity: .25; transform: scale(3);
    }
    85%{
        opacity: .525; transform: scale(13);
    }
    100%{
        opacity: .2; transform: scale(15);
    }
}
