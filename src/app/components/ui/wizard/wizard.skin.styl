.wizard-default
    background:#cecece;

    .wizard-item-default
        text-align: center;
        color:#fff;
        font-size:14px;
        cursor: pointer;
        background:#f6f6f6;
        border-left:1px solid $color-gray-border;
        border-right:1px solid $color-gray-border;
        border-bottom:1px solid $color-gray-border;
        color:#676767;
        &.is-active
            background:$color-white;
            border-right:1px solid $color-gray-border;
            font-weight:bold;
            box-shadow:0px -1px 14px #999;
            position:relative;
            z-index: 10;
        .fa
            color:$color-gray-border;
